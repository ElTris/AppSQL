<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <ImageView
        android:id="@+id/userphoto"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/logs"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Dedt1"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/nick"
            android:maxLines="1"
            android:maxLength="30"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="INGRESAR NICK NAME"
            android:textAlignment="center"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Dedt2"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/passwords"
            android:maxLines="1"
            android:maxLength="10"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="INGRESAR PASSWORD"
            android:textAlignment="center"/>

    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/creedenciales"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:text="RECORDAR CREEDENCIALES"/>

    <Button
        android:id="@+id/btniside"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/BlackINwithe"
        android:text="INGRESAR"
         />

</LinearLayout>