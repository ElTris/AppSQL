<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    tools:context=".MainOptions">
    <TextView
        android:id="@+id/menutext"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:textSize="25dp"
        android:text="MENÃš"/>

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="480dp">
            <LinearLayout
                android:id="@+id/insertAdmin"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/borderwhite">

                <ImageView
                    android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/addusers" />

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/BlackINwithe"
                    android:text="AGREGAR ADMIN"/>
            </LinearLayout>

            <LinearLayout

                android:id="@+id/insertAlumnos"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/borderwhite"
                android:orientation="vertical">

                <ImageView
                    android:padding="20dp"
                    android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/std" />

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/BlackINwithe"
                    android:text="AGREGAR ALUMNO"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/report"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/borderwhite"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/report" />

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/BlackINwithe"
                    android:text="GENERAR REPORTE"/>
            </LinearLayout>

        <!---->

    </LinearLayout>


</LinearLayout>